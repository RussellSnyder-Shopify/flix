<%= form_with(model: user, local: true, class: "lg:w-1/2 mx-auto") do |f| %>
  <%= render "shared/errors", object: user %>
  <div class="mb-4">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-text-input", autofocus: true %>
  </div>
  <div class="mb-4">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <% if user.new_record? %>
      <%= f.submit "Create Account", class: 'btn btn-primary' %>
    <% else %>
      <%= f.submit "Update Account", class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>
