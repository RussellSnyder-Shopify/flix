<h1>Genres</h1>
<table class="border-collapse border border-slate-500 table mx-auto w-full sm:w-3/4 md:w-1/2">
  <thead class="table-header-group">
    <tr>
      <th class="text-left border border-slate-600">
        Name
      </th>
      <th class="text-left border border-slate-600" colspan="2">
        Actions
      </th>
    </tr>
  </thead>
  <tbody class="table-row-group">
    <% @genres.each do |genre| %>
      <tr class="table-row">
        <td class="table-cell py-2 pr-6"><%= genre.name %></td>
        <td class="table-cell py-x-1"><%= link_to "Edit", edit_genre_path(genre), class: "btn btn-warning" %></td>
        <td class="table-cell px-2">
          <%= link_to "Delete", genre_path(genre), method: :delete,
                data: { confirm: "Delete #{genre.name}?" },
                class: "btn btn-error" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>Create a Genre</h2>
<%= render 'form', genre: @genre  %>
