<%= form_with(model: genre, local: true, class: "lg:w-1/2 mx-auto") do |f| %>
  <%= render "shared/errors", object: genre %>
  <div class="mb-4">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-text-input", autofocus: true %>
  </div>
  <div class="mb-4">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
