<header class="h-20 mb-5 bg-green-300 px-2">
  <nav class="container mx-auto flex flex-wrap justify-between items-center">
    <%= link_to image_tag("logo_small.png", :class => "object-cover w-auto
                h-20", :alt => "Flix Logo"), root_path %>
    <ul>
      <li>
        <%= link_to "All Movies", movies_path %>
      </li>
    </ul>
    <ul class="flex justify-between">
      <% if current_user %>
        <li class="mr-3">
          <%= link_to has_username?(current_user) ? current_user.username : current_user.name, current_user %>
        </li>
        <li>
          <%= link_to "Sign Out", session_path, method: :delete %>
        </li>
      <% else %>
        <li class="mx-2">
          <%= link_to "Sign Up", signup_path, class: "btn btn-primary" %>
        </li>
        <li class="mx-2">
          <%= link_to "Sign In", signin_path, class: "btn btn-primary" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>
