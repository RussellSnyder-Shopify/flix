<h1>Reviews for   <%= link_to @movie.title, @movie %></h1>
<div class="grid grid-cols-1 divide-y">
  <% @reviews.each do |review| %>
    <section class="grid grid-cols-6 gap-2 py-10 divide-x divide-x-2 divide-black text-center">
      <div class="image text-left">
        <%= render 'stars', percent: review.stars_as_percent %>
      </div>
      <div><%= review.name %></div>
      <p>
        <%= review.comment %>
      </p>
      <p>
        <%= time_ago_in_words(review.updated_at) %> ago
      </p>
      <p>
        <%= link_to "delete", movie_review_path(@movie, review), method: :delete,   data: {
        confirm: "Delete #{review.name}'s Review?"
          }, class: "btn btn-error" %>
      </p>
      <p>
        <%= link_to "edit", edit_movie_review_path(@movie, review), class: "btn btn-primary" %>
      </p>
    </section>
  <% end %>
</div>
<section class="admin mt-10">
  <%= link_to "New", new_movie_review_path, class: "btn btn-primary" %>
</section>
