<%= form_with(url: session_path, local: true, class: "lg:w-1/2 mx-auto") do |f| %>
  <%# <%= render "shared/errors", object: user %>
  <div class="mb-4">
    <%= f.label :email_or_username, class: "form-label" %>
    <%= f.text_field :email_or_username, class: "form-text-input", autofocus: true, required: true %>
  </div>
  <div class="mb-4">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-text-input", required: true %>
  </div>
  <div class="mb-4">
    <%= f.submit "Sign In", class: 'btn btn-primary' %>
  </div>
<% end %>
