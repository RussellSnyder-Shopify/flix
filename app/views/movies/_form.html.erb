<%= form_with(model: movie, local: true, class: "lg:w-1/2 mx-auto") do |f| %>
  <div class="mb-4">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-text-input", autofocus: true %>
  </div>
  <div class="mb-4">
    <%= f.label :rating, class: "form-label" %>
    <%= f.text_field :rating, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :total_gross, class: "form-label" %>
    <%= f.number_field :total_gross, value: @movie.total_gross.to_i , step: 1, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, rows: 7, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.label :released_on, class: "form-label" %>
    <%= f.date_select :released_on, { order: [:year]}, class: "form-text-input" %>
  </div>
  <div class="mb-4">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
